@model UserRegisterViewModel
<form method="post" asp-action="Register" asp-controller="Home">
    <div class="p-5">
        <div class="form-group row">
            <h3 class="text-primary">Register</h3>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Username"></label>
            <input asp-for="@Model.Username" type="text" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.UserDescription"></label>
            <input asp-for="@Model.UserDescription" type="text" class="form-control" />
            <span asp-validation-for="@Model.UserDescription" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" type="email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.ConfirmPassword"></label>
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-outline-primary" value="Register" />
        <a asp-action="Login" class="btn btn-outline-primary mx-1">Back To Login</a>
    </div>
</form>