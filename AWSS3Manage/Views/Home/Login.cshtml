@model UserLoginViewModel
<form method="post" asp-action="Login" asp-controller="Home">
    @Html.AntiForgeryToken()
    <div class="p-5">
        <div class="form-group row">
            <h3 class="text-info">Login</h3>
        </div>
    </div>
    <h5 class="text-warning">@ViewBag.Message</h5>
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Password"></label>
            <input asp-for="@Model.Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-outline-info" value="Login" />
    </div>
</form>
