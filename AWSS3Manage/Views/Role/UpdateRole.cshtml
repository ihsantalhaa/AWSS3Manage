@model RoleDetailsViewModel
<form method="post" asp-action="UpdateRole" asp-controller="Role">
    <input asp-for="@Model.Id" hidden />
    <div class="p-5">
        <div class="form-group row">
            <h3 class="text-success">Edit Role</h3>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.RoleName"></label>
            <input asp-for="@Model.RoleName" type="text" class="form-control" />
            <span asp-validation-for="@Model.RoleName" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.RoleDescription"></label>
            <input asp-for="@Model.RoleDescription" type="text" class="form-control" />
            <span asp-validation-for="@Model.RoleDescription" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-outline-success" value="Update Role" />
        <a asp-action="ListRoles" class="btn btn-outline-success mx-1">Back To Role</a>
    </div>
</form>