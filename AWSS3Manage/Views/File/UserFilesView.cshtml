@model List<FileDetailsViewModel>
<div class="row pt-4">
    <div class="col-9">
        <h3 class="text-info">@ViewBag.User</h3>
    </div>
    <div class="col-12 text-lg-end">
        <a asp-controller="File" asp-action="UploadFile" class="btn btn-outline-info">Upload File</a>
    </div>
    <br />
    <br />
    @if (Model != null && Model.Count() > 0)
    {
        <table class="table table-hover" width="100%">
            <thead>
                <tr>
                    <th>File Name</th>
                    <th>File Size</th>
                    <th>Upload Date</th>
                    <th>File Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="15%">@item.FileName</td>
                        <td width="10%">@item.FileSize</td>
                        <td width="15%">@item.UploadDate</td>
                        <td width="40%">@item.FileDescription</td>
                        <td width="20%">
                            <form asp-controller="File" asp-action="DownloadFile" method="post">
                                <input type="hidden" name="FileId" value="@item.FileId">
                                <div class="w-100 btn-group" role="group">
                                    <input class="btn btn-outline-info mx-1" type="submit" value="Download">
                                    <a asp-controller="File" asp-action="EditFile" asp-route-Id="@item.FileId"
                                       class="btn btn-outline-info mx-1">Edit</a>
                                    <a asp-controller="File" asp-action="DeleteFile" asp-route-Id="@item.FileId"
                                       class="btn btn-outline-danger mx-1">Delete</a>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <br />
        <p><b>Not Found Result</b></p>
    }
</div>