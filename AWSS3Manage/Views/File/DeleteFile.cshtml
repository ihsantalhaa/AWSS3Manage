@model FileDetailsViewModel
<form method="post" asp-controller="File" asp-action="Delete">
    <div class="p-5">
        <input asp-for="@Model.FileId" type="hidden" />
        <div class="form-group row">
            <h3 class="text-danger">Delete File ?</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.FileName"></label>
            <input asp-for="@Model.FileName" type="text" readonly class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.FileDescription"></label>
            <input asp-for="@Model.FileDescription" type="text" readonly class="form-control" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.UploadDate"></label>
            <input asp-for="@Model.UploadDate" type="text" readonly class="form-control" />
        </div>
    </div>
    <br />
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-outline-danger" value="Delete" />
        <a asp-action="UserFilesView" class="btn btn-outline-danger mx-1">Back To Files</a>
    </div>
</form>