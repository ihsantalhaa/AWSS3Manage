@model UserDetailsViewModel
<form method="post" asp-action="UpdateProfile" asp-controller="User">
    <input asp-for="@Model.Id" hidden />
    <div class="p-5">
        <div class="form-group row">
            <h3 class="text-primary">Update Profile</h3>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Username"></label>
            <input asp-for="@Model.Username" type="text" class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" type="email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-outline-primary" value="Update" />
    </div>
</form>
