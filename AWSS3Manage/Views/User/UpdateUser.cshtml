@model UserDetailsViewModel
<form method="post" asp-action="UpdateUser" asp-controller="User">
    <input asp-for="@Model.Id" hidden />
    <div class="p-5">
        <div class="form-group row">
            <h3 class="text-primary">Edit User</h3>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Username"></label>
            <input asp-for="@Model.Username" readonly class="form-control" />
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.UserDescription"></label>
            <input asp-for="@Model.UserDescription" type="text" class="form-control" />
            <span asp-validation-for="@Model.UserDescription" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-4">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" readonly class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="w-12 btn-group" role="group">
        <input type="submit" class="btn btn-outline-primary" value="Modify User" />
        <a asp-action="ListUsers" class="btn btn-outline-primary mx-1">Back To Users</a>
    </div>
</form>